<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/the_guardian_article_row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/articleFavoriteImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        app:srcCompat="@drawable/favorite_yellow_small" />

    <LinearLayout
        android:id="@+id/articleSummary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:layout_toEndOf="@id/articleFavoriteImage"
        android:orientation="vertical">

        <TextView
            android:id="@+id/guardianArticleTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/roboto"
            android:textAlignment="textStart"
            android:textColor="@color/neutral"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/guardianArticleDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:textAlignment="textEnd"
            android:textColor="@color/pastel"
            android:textSize="12sp" />
    </LinearLayout>

</RelativeLayout>